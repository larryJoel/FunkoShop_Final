<%- include('../partials/header') %>
<main class="container login">
    <section class="login_container">
        <h1 class="login_title">CREA TU CUENTA</h1>
        <H3 class="login_subtitle">Completa el formulario para ser parte del mundo de los Funkos</H3>
        
        <div class="login_form">
            <form action="/auth/register" method="POST">
              <div class="login_form-group">
                <label class="login_form_userName">Nombre:</label>
                <input class="login_form_userBox" type="text" name="name" required>
              </div>
              <div class="login_form-group">
                <label class="login_form_passLastname">Apellido:</label>
                <input class="login_form_passBox" type="text" name="lastname" required>
              </div>
              <div class="login_form-group">
                <label class="login_form_userName">Email:</label>
                <input class="login_form_userBox" type="email" name="email" required>
              </div>
              <div class="login_form-group">
                <label class="login_form_passLastname">Contraseña:</label>
                <input class="login_form_passBox" type="password" name="password" required>
              </div>
              <div class="login_form-group">
                <label class="login_form_passLastname">Repetir Contraseña:</label>
                <input class="login_form_passBox" type="password" name="confirmpassword" required>
              </div>
              <button class="login_btnIngresar">Ingresar</button>
              
              <input class="login_check" type="checkbox" >
              <label class="login_checkTitle">Acepto <a href="">terminos y condiciones</a></label>
            </form>
        </div>
         <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
            <p class="error-message"><%= errorMessage %></p>
         <% } else if (typeof successMessage !== 'undefined' && successMessage) { %>
            <p class="success-message"><%= successMessage %></p>
         <% } %>
    </section>
</main>

 
<%- include('../partials/footer') %>
